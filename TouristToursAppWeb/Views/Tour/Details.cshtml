@model TourDetailsViewModel

<h2>@Model.Title</h2>

<p>@Model.Duration</p>

@if (Model.Images != null && Model.Images.Count > 0)
{
    <h3>Images:</h3>
    <div class="tour-images">
        @foreach (var image in Model.Images)
        {
            <div class="tour-image">
                <img src="@Url.Action("GetImage", "Tour", new { fileName = image.FileName })" alt="@image.FileName" />
            </div>
        }
    </div>
}
else
{
    <p>No images available for this tour.</p>
}

<h4>Add a new image:</h4>
<form method="post" enctype="multipart/form-data" asp-action="AddImageToTour" asp-controller="Tour">
    <input type="hidden" name="tourId" value="@Model.Id" />
    <div class="form-group">
        <input type="file" name="file" required />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Upload Image</button>
    </div>
</form>