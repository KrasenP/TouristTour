@model List<TourBookedViewModel>

<div class="container mt-5">
    <h1>Tour Bookings</h1>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <!-- ... Останалите колони ... -->
                <th>Tour name</th>
                <th>Client name</th>
                <th>Booking user phone number</th>
                <th>Email</th>
                <th>Count of people </th>
                <th>Is Booked</th>
                <th>Is Refused</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if(Model.Count<=0) 
            {
                <p>There is no booking for this tour</p>
            }  

            @foreach (var item in Model)
            {
                <tr>
                    <!-- ... Останалите полета ... -->
                    <td>@item.TourName</td>
                    <td>@item.BookingUserName</td>
                    <td>@item.BookingUserPhoneNumber</td>
                    <td>@item.Email</td>
                    <td>@item.CountOfPeople</td>
                    <td>@item.IsBooked</td>
                    <td>@item.IsRefused</td>
                    <td>
                        <form asp-action="UpdateBookingStatus" asp-controller="TourBooking" method="post">
                            <input type="hidden" name="Id" value="@item.Id" />
                            <button type="submit" name="ActionType" value="ToggleBooked" class="btn btn-success">Toggle Booked</button>
                            <button type="submit" name="ActionType" value="ToggleRefused" class="btn btn-warning">Toggle Refused</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>